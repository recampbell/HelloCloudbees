<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
    
        <shape android:shape="rectangle">
      	
      		<stroke android:width="1dp" android:color="#FF898989" />
      	
            <gradient
				android:startColor="#FFFB9649"
				android:endColor="#FFFA8E3A"
				android:angle="-90" />
 	
		    <corners android:radius="15dp" />
		  		
		  	<padding
		  		android:top="20dp"
		        android:left="20dp"
		        android:bottom="20dp"
		        android:right="20dp" />
		  		
        </shape>
        
    </item>

    <item android:state_focused="true" >
        
        <shape android:shape="rectangle">
      	
      		<stroke android:width="1dp" android:color="#FF898989" />
      	
            <gradient
				android:startColor="#FFFB9649"
				android:endColor="#FFFA8E3A"
				android:angle="-90" />
 	
		    <corners android:radius="15dp" />
		  		
		  	<padding
		  		android:top="20dp"
		        android:left="20dp"
		        android:bottom="20dp"
		        android:right="20dp" />
		  		
        </shape>
        
    </item>

    <item>        
    	
    	<shape android:shape="rectangle">
      	
      		<stroke android:width="1dp" android:color="#FF898989" />
      	
            <gradient
				android:startColor="#FFFB9649"
				android:endColor="#FFF96C00"
				android:angle="-90" />
 	
		   <corners android:radius="15dp" />
		  		
		  	<padding
		  		android:top="20dp"
		        android:left="20dp"
		        android:bottom="20dp"
		        android:right="20dp" />
		  		
        </shape>
    
    </item>
      
</selector>